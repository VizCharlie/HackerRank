#include <cmath>
#include <cstdio>
#include <vector>
#include <iostream>
#include <algorithm>
using namespace std;

int main() {
    int a[100000];
    long n,max=0,count=0;
    cin>>n;
    for(int i = 0; i< n;i++){
       cin >> a[i];
       if(a[i]>max)
           max=a[i];
    }
    for(int i=0;i<n;i++)
        {

           if(a[i]==max)
           count++;
    	}
      cout<<count;
    return 0;
}
